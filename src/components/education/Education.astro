---
import { cargarDatos } from '@api/loadData';
import type { Grade, Certification } from '../../types/Education';
import EducationItem from './EducationItem.astro';

const getGrades: Grade[] = (await cargarDatos<Grade[]>('education')) ?? [];
const getCertifications: Certification[] = (await cargarDatos<Certification[]>('certifications')) ?? [];
---

<div class="max-w-6xl mx-auto px-4 py-6">
  <!-- Grid: columnas adaptadas y GAP razonable -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-y-8 gap-x-12">
    <div>
      <ol class="space-y-6 m-0 p-0 list-none">
        {getGrades.map(({ career, company, year }) => (
          <EducationItem 
            type="grado" 
            title={career} 
            institution={company} 
            date={year.toString()} 
          />
        ))}
      </ol>
    </div>

    <div>
      <ol class="space-y-6 m-0 p-0 list-none">
        {getCertifications.map(({ certification, company, link }) => (
          <EducationItem 
            type="certificaciÃ³n" 
            title={certification} 
            institution={company} 
            date=""  
            link={link} 
          />
        ))}
      </ol>
    </div>
  </div>
</div>
