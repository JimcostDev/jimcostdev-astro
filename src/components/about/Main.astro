---
import SocialNetworks from "@components/SocialNetworks.astro";
import { cargarDatos } from "@api/loadData";
import type { User } from "../../types/User";
import type { Profile } from "../../types/About";
import type { SocialNetwork } from "../../types/SocialNetwork";
import DociIcon from "@components/icons/Doc.astro";


// Cargar datos básicos
const user = (await cargarDatos<User>("users")) ?? {
  id: "",
  full_name: "Nombre desconocido",
  username: "",
  email: "",
  roles: [],
};
const fullName = user.full_name;

const profiles = (await cargarDatos<Profile[]>("profile")) ?? [];
const profile: Profile = profiles[0] ?? {
  id: "",
  rol: "Sin rol",
  description: "",
  skills: [],
  username: "",
  avatar: "",
};
const role = profile.rol;

// Cargar redes
const networks: SocialNetwork[] =
  (await cargarDatos<SocialNetwork[]>("social_networks")) ?? [];

// Buscar SOLO la entrada CV (title === 'cv')
const cvEntry = networks.find(n => n?.title?.toLowerCase() === "cv" && n.url);

// Normalizar URL (añade https:// si falta)
function normalizeUrl(u?: string) {
  if (!u) return "";
  // Si ya es absoluta o ruta relativa válida, déjala. Aceptamos también datos: URIs
  if (/^(https?:\/\/|\/|data:)/i.test(u)) return u;
  return `https://${u}`;
}

const cvHref = cvEntry?.url ? normalizeUrl(cvEntry.url) : null;

// Host del CV para ocultar su icono en SocialNetworks (sin tocar el componente)
function getHost(u?: string) {
  try {
    if (!u) return "";
    return new URL(normalizeUrl(u)).host;
  } catch {
    return "";
  }
}
const cvHost = getHost(cvEntry?.url);

// --- AVATAR: normalizamos y dejamos fallback ---
const avatarUrl = profile.avatar ? normalizeUrl(profile.avatar) : "/dev.webp";
// Si el API puede devolver rutas relativas ("/uploads/me.jpg") esto las mantendrá.
// Si devuelve "jimcostdev.com/me.webp" se convertirá en "https://jimcostdev.com/me.webp"

// Opciones de link / accesibilidad
const openInNewTab = true;
const rel = "noopener noreferrer";
const ariaLabel = "Abrir CV";
---

<section class="pt-9 md:pt-18 px-4 mt-6 relative max-w-screen-lg mx-auto">
  <div class="flex flex-col items-center">
    <!-- BOTÓN CV: solo si existe la entrada 'cv' -->
    {cvHref ? (
      <a
        href={cvHref}
        target={openInNewTab ? "_blank" : undefined}
        rel={rel}
        aria-label={ariaLabel}
        class="mb-8 inline-flex items-center gap-2 px-4 py-2 rounded-full border border-blue-300 text-sm font-medium text-sky-700 transition hover:bg-sky-500/10 hover:scale-[1.02] focus:outline-none focus:ring-2 focus:ring-sky-300 shadow-md
    hover:shadow-lg hover:scale-105 transition-transform duration-300 cursor-pointer"
      >
        <DociIcon class="w-5 h-5" />
        <span>Ver / Descargar CV</span>
      </a>
    ) : null}

    <!-- Profile Image (ahora dinámica desde la API) -->
    <div class="mb-8 relative group">
      <div
        class="absolute -inset-1 bg-gradient-to-r from-sky-500 to-blue-700 rounded-full blur opacity-30 group-hover:opacity-50 transition duration-1000"
      />
      <img
        src={avatarUrl}
        alt={`Foto de perfil de ${fullName}`}
        width="288"
        height="288"
        loading="lazy"
        decoding="async"
        class="w-64 h-64 md:w-72 md:h-72 object-cover rounded-full shadow-xl ring-2 ring-sky-50 transition-transform duration-300 hover:scale-105"
      />
    </div>

    <!-- Nombre dinámico -->
    <h1 class="text-2xl md:text-4xl font-bold text-center px-4">
      Hola, soy&nbsp;
      <span class="bg-gradient-to-r from-sky-600 to-sky-800 bg-clip-text text-transparent">
        {fullName}
      </span>
    </h1>

    <div class="flex flex-col items-center mt-4">
      <div class="flex items-center gap-2 mb-2">
        <span class="text-sky-700">●</span>
        <h3 class="text-center text-xl md:text-2xl font-medium text-gray-700">
          {role}
        </h3>
        <span class="text-sky-500">●</span>
      </div>

      <!-- Social networks SIN tocar 'web' -->
      <SocialNetworks />

      <!-- Ocultar SOLO la red cuyo href apunte al host del CV -->
      {cvHost ? (
        <style>
          {`
/* Oculta cualquier enlace de SocialNetworks que apunte al mismo host del CV */
a[href*="${cvHost}"] { display: none !important; }
          `}
        </style>
      ) : null}
    </div>
  </div>
</section>

