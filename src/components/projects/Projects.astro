---
import Link from '@components/icons/Link.astro';
import LinkButton from '@components/LinkButton.astro';
import { cargarDatos } from '@api/loadData';
import type { Project } from '../../types/Project';

// Carga de informaci√≥n de proyectos
const getProjects: Project[] = (await cargarDatos<Project[]>('projects')) ?? [];
---

<div class="mx-4 md:mx-12 space-y-6">
  {getProjects.map((project) => (
    <article class="bg-white/50 backdrop-blur-sm rounded-xl border border-sky-100 shadow-sm hover:shadow-md transition-all duration-300 overflow-hidden group">
      
      <div class="flex flex-col md:flex-row">
        <!-- Project image -->
        {project.image && (
          <div class="w-full md:w-80 flex-shrink-0 p-4 md:p-6 flex items-center">
            <div class="relative overflow-hidden bg-gradient-to-br from-sky-50 to-white rounded-lg border border-sky-100 w-full">
              <img
                alt={`Captura de pantalla del proyecto ${project.title}`}
                class="w-full h-auto object-contain transition-transform duration-500 ease-in-out group-hover:scale-105"
                loading="lazy"
                src={project.image}
              />
              
              <!-- Overlay gradient -->
              <div class="absolute inset-0 bg-gradient-to-t from-black/5 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            </div>
          </div>
        )}
        
        <!-- Project content -->
        <div class="flex-1 p-6 md:p-8">
          <div class="h-full flex flex-col justify-between">
            <div>
              <h3 class="text-lg md:text-xl font-bold text-sky-700 mb-3 leading-snug">{project.title}</h3>
              
              <!-- Description -->
              <p class="text-gray-700 leading-relaxed text-base mb-4">{project.description}</p>
              
              <!-- Stack technologies -->
              <div class="flex flex-wrap gap-2 mb-6">
                {project.stack.map((tech) => (
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-sky-50 text-sky-700 border border-sky-200">
                    {tech}
                  </span>
                ))}
              </div>
            </div>
            
            <!-- Link button -->
            {project.link && (
              <div>
                <LinkButton href={project.link} class="inline-flex items-center text-sm font-medium text-sky-600 hover:text-sky-800 transition-colors py-2 px-3 bg-sky-50 rounded-md">
                  <Link class="w-4 h-4 mr-2" />
                  Ver proyecto
                </LinkButton>
              </div>
            )}
          </div>
        </div>
      </div>
      
    </article>
  ))}
</div>