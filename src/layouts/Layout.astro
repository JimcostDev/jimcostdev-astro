---
interface Props {
	title: string;
}

import '@fontsource-variable/onest';
const { title } = Astro.props;
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro'
import { ClientRouter } from 'astro:transitions';
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/logo.webp" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content="Ingeniero informático apasionado por la tecnología y el desarrollo de software, con experiencia en creación de soluciones digitales y vocación docente. ¡Descubre cómo puedo ayudarte a innovar!">
		<meta name="keywords" content="Ronaldo Jiménez, jimcostdev, software engineer, python, golang">
		<meta name="author" content="Ronaldo Jiménez">
		<meta property="og:title" content="JimcostDev by Ronaldo Jiménez | Software Engineer">
		<meta property="og:description" content="Ingeniero informático apasionado por la tecnología y el desarrollo de software, con experiencia en creación de soluciones digitales y vocación docente. ¡Descubre cómo puedo ayudarte a innovar!">
		<meta property="og:image" content="https://firebasestorage.googleapis.com/v0/b/jimcostdev-firebase.appspot.com/o/contacto.webp?alt=media&token=f8d75f0d-7533-4d07-b440-876839a47852">
		<meta property="og:url" content="https://www.jimcostdev.com">
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:title" content="JimcostDev by Ronaldo Jiménez | Software Engineer">
		<meta name="twitter:description" content="Ingeniero informático apasionado por la tecnología y el desarrollo de software, con experiencia en creación de soluciones digitales y vocación docente. ¡Descubre cómo puedo ayudarte a innovar!">
		<meta name="twitter:image" content="https://firebasestorage.googleapis.com/v0/b/jimcostdev-firebase.appspot.com/o/contacto.webp?alt=media&token=f8d75f0d-7533-4d07-b440-876839a47852">
		<ClientRouter />
	</head>
	<body class="absolute inset-0 -z-10 h-full w-full bg-secondary bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] [background-size:16px_16px]">
		<Header />
		<main class="max-w-5xl px-4 m-auto">
			<slot />
		</main>
		<Footer />
	</body>
</html>
<style is:global>
	html {
		font-family: 'Onest Variable' system-ui, sans-serif;
	}
</style>